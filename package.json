{
  "name": "merely.css",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Highly resuable, flexible styles",
  "keywords": [
    "sass"
  ],
  "author": "Kitwang Chen <kitwang.c@outlook.com>",
  "license": "MIT",
  "main": "src/index.scss",
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "init": "yarn && cd docs && yan",
    "docs:dev": "cd packages/docs && npm run develop",
    "docs:prod": "cd packages/docs && npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "style-resources-loader": "^1.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "css-loader": "^3.4.2",
    "cz-conventional-changelog": "3.1.0",
    "lerna": "^3.19.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
